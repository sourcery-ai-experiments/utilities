{
  "name": "@alikuxac/utilities",
  "version": "1.1.0",
  "description": "Alikuxac Common util functions",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf -rf dist && tsc -p tsconfig.json",
    "format": "prettier **/**/*.ts --ignore-path ./.prettierignore --write",
    "lint": "eslint 'libs/**/*.ts' --fix",
    "lint-staged": "lint-staged â€” config .lintstagedrc",
    "commit": "/node_modules/cz-customizable/standalone.js",
    "watch": "tsc -b src -w",
    "prepare": "is-ci || husky install",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alikuxac/utilities.git"
  },
  "keywords": [
    "utilities",
    "alikuxac"
  ],
  "author": "Alikuxac",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alikuxac/utilities/issues"
  },
  "homepage": "https://github.com/alikuxac/utilities#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-angular": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@types/conventional-recommended-bump": "^6.1.1",
    "@types/node": "^20.16.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "auto-changelog": "^2.5.0",
    "commitlint": "^17.8.1",
    "commitlint-config-gitmoji": "^2.3.1",
    "conventional-changelog-cli": "^4.1.0",
    "conventional-recommended-bump": "^7.0.1",
    "cz-customizable": "^7.2.1",
    "eslint": "^8.57.1",
    "eslint-config-marine": "^9.4.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.30.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "pretty-quick": "^3.3.1",
    "release-it": "^16.3.0",
    "rimraf": "^5.0.10",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  }
}